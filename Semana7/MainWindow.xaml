<Window x:Class="Semana7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="pink">
    <Grid>
       
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="149,0,84,0">
            <Button Content="Insertar" Click="Button_Click_Insertar"  Width="120"/>
            <Button Content="Listar" Click="Button_Click" Height="25" Width="100"/>
            <Button Content="Buscar" Click="Button_Click_find" Height="25" Width="100"/>

            <TextBox x:Name="txtName" TextWrapping="Wrap" Text="Nombre" Width="120"/>
            <Button Content="Eliminar" Click="Button_Click_delete" Height="25" Width="100"/>


        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,254,-10,0" >
            <DataGrid x:Name="dgPeople18" Width="368"/>

        </StackPanel>

    </Grid>
</Window>

